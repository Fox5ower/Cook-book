{
  "name": "cook-book",
  "version": "1.0.0",
  "description": "Cook-book application web-site",
  "main": "./dist/src/server.js",
  "scripts": {
    "start": "node ./dist/src/server.js",
    "server": "nodemon ./dist/src/server.js",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client-prod": "npm run build --prefix client",
    "test": "jest --detectOpenHandles"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "node"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "keywords": [
    "mern",
    "mongo",
    "react",
    "express",
    "node"
  ],
  "author": "Maxim Lisikov <max7im13@tut.by>",
  "license": "ISC",
  "dependencies": {
    "@types/config": "0.0.36",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/mongoose": "^5.7.0",
    "@types/multer": "^1.4.0",
    "@types/node": "^13.5.0",
    "@types/supertest": "^2.0.8",
    "bcryptjs": "^2.4.3",
    "config": "^3.2.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "is-empty": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.9",
    "multer": "^1.4.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "validator": "^12.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-typescript": "^7.8.3",
    "@types/express": "^4.17.2",
    "@types/jest": "^25.1.4",
    "@types/react-router-dom": "^5.1.3",
    "axios": "^0.21.1",
    "babel-jest": "^25.1.0",
    "concurrently": "^5.0.2",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "superagent": "^5.2.2",
    "supertest": "^4.0.2",
    "typescript": "^3.7.5"
  }
}
